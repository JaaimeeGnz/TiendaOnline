        cartItemsEl.innerHTML = `
          <div class="text-center py-12 text-gray-500">
            <svg
              class="w-16 h-16 mx-auto text-gray-300 mb-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1"
                d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            <p class="font-bold">Tu carrito est√° vac√≠o</p>
            <p class="text-sm mt-1">¬°A√±ade productos para empezar!</p>
          </div>
        `;
        cartTotalEl.textContent = '‚Ç¨0.00';
      } else {
        // Mostrar items
        let subtotal = 0;
        cartItemsEl.innerHTML = items.map((item) => {
          const itemPrice = (item.price_cents || item.price || 0) / 100;
          const itemTotal = itemPrice * item.quantity;
          subtotal += itemTotal;
          
          return `
            <div class="border-b border-gray-700 pb-4">
              <div class="flex gap-3">
                ${item.image_url || item.image ? `<img src="${item.image_url || item.image}" alt="${item.name}" class="w-12 h-12 object-cover rounded" />` : '<div class="w-12 h-12 bg-gray-700 rounded"></div>'}
                <div class="flex-1">
                  <p class="font-bold text-sm">${item.name}</p>
                  ${item.size ? `<p class="text-xs text-gray-400">Talla: ${item.size}</p>` : ''}
                  <p class="text-sm text-jd-red font-bold">‚Ç¨${itemPrice.toFixed(2)} x ${item.quantity}</p>
                </div>
              </div>
            </div>
          `;
        }).join('');
        
        cartTotalEl.textContent = `‚Ç¨${(subtotal).toFixed(2)}`;
      }
    }

    if (cartToggle && cartSidebar && cartOverlay) {
      const toggleCart = () => {
        const isHidden = cartSidebar.classList.contains("translate-x-full");

        if (isHidden) {
          cartOverlay.classList.remove("hidden");
          cartSidebar.classList.remove("translate-x-full");
          updateCartModal(); // Actualizar modal cuando se abre
        } else {
          cartOverlay.classList.add("hidden");
          cartSidebar.classList.add("translate-x-full");
        }
      };

      cartToggle.addEventListener("click", toggleCart);
      cartOverlay.addEventListener("click", toggleCart);
      if (cartClose) {
        cartClose.addEventListener("click", toggleCart);
      }

      document.addEventListener("keydown", (e) => {
        if (
          e.key === "Escape" &&
          !cartSidebar.classList.contains("translate-x-full")
        ) {
          toggleCart();
        }
      });

      // Actualizar modal cuando cambia localStorage (desde otra pesta√±a o componente)
      window.addEventListener('storage', updateCartModal);
      
      // Actualizar modal cuando se agrega producto desde AddToCartButton
      window.addEventListener('cart-updated', updateCartModal);
      
      // Actualizar el badge del carrito al cargar la p√°gina
      updateCartModal();
    }

