---
/**
 * AdminLayout.astro
 * Layout para el panel de administración (SSR protegido)
 */

import BaseLayout from './BaseLayout.astro';

interface Props {
  title?: string;
}

const { title = 'Panel Administrativo' } = Astro.props;

// Verificar que el usuario está autenticado
const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/admin/login');
}
---

<BaseLayout title={`${title} - FashionMarket Admin`}>
  <div class="min-h-screen bg-neutral-white">
    <!-- Header Admin -->
    <header class="bg-primary-800 text-neutral-white shadow-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
        <div class="flex items-center gap-4">
          <a href="/admin" class="font-serif text-xl font-bold hover:text-neutral-gray_light">
            FashionMarket
          </a>
          <span class="text-sm text-neutral-gray_light">Panel Admin</span>
        </div>

        <div class="flex items-center gap-6">
          <span class="text-sm">{user.email}</span>
          <form action="/api/admin/logout" method="POST" class="inline">
            <button
              type="submit"
              class="px-4 py-2 text-sm font-semibold bg-red-600 hover:bg-red-700 rounded transition"
            >
              Cerrar Sesión
            </button>
          </form>
        </div>
      </div>
    </header>

    <!-- Sidebar Navigation -->
    <div class="flex">
      <aside class="w-64 bg-primary-50 border-r border-primary-200 min-h-screen">
        <nav class="p-6 space-y-2">
          <a
            href="/admin"
            class="block px-4 py-2 text-sm font-semibold text-primary-800 hover:bg-primary-100 rounded transition"
          >
            Dashboard
          </a>

          <div class="mt-6">
            <h3 class="px-4 py-2 text-xs font-semibold text-primary-600 uppercase tracking-wider">
              Inventario
            </h3>
            <a
              href="/admin/productos"
              class="block px-4 py-2 text-sm text-neutral-gray_dark hover:bg-primary-100 rounded transition"
            >
              Productos
            </a>
            <a
              href="/admin/productos/nuevo"
              class="block px-4 py-2 text-sm text-neutral-gray_dark hover:bg-primary-100 rounded transition"
            >
              Nuevo Producto
            </a>
          </div>

          <div class="mt-6">
            <h3 class="px-4 py-2 text-xs font-semibold text-primary-600 uppercase tracking-wider">
              Configuración
            </h3>
            <a
              href="/admin/categorias"
              class="block px-4 py-2 text-sm text-neutral-gray_dark hover:bg-primary-100 rounded transition"
            >
              Categorías
            </a>
          </div>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="flex-1">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <slot />
        </div>
      </main>
    </div>
  </div>
</BaseLayout>
