---
/**
 * src/pages/admin/reportes.astro
 * Panel de administración - Reportes de mensajes de contacto
 */

import AdminLayout from "../../layouts/AdminLayout.astro";
---

<AdminLayout title="Reportes - Panel de Administración">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Reportes de Contacto</h1>
      <p class="mt-2 text-gray-600">Gestiona los mensajes y quejas de los clientes</p>
    </div>

    <!-- Filtros -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Estado</label>
          <select id="filterStatus" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            <option value="">Todos los estados</option>
            <option value="new">Nuevo</option>
            <option value="read">Leído</option>
            <option value="resolved">Resuelto</option>
            <option value="spam">Spam</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Búsqueda</label>
          <input 
            type="text" 
            id="searchInput" 
            placeholder="Nombre, email, asunto..." 
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Ordenar por</label>
          <select id="sortBy" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            <option value="newest">Más recientes</option>
            <option value="oldest">Más antiguos</option>
          </select>
        </div>
        <div class="flex items-end">
          <button id="refreshBtn" class="w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">
            Actualizar
          </button>
        </div>
      </div>
    </div>

    <!-- Tabla de mensajes -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-100 border-b border-gray-200">
          <tr>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Nombre</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Email</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Asunto</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Estado</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Fecha</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Acciones</th>
          </tr>
        </thead>
        <tbody id="messagesTableBody" class="divide-y divide-gray-200">
          <tr>
            <td colspan="6" class="px-6 py-12 text-center text-gray-500">
              Cargando mensajes...
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Modal para ver detalles -->
    <div id="messageModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-96 overflow-y-auto">
        <div class="sticky top-0 bg-gray-100 border-b border-gray-200 px-6 py-4 flex justify-between items-center">
          <h2 id="modalTitle" class="text-lg font-semibold text-gray-900">Detalles del Mensaje</h2>
          <button onclick="closeModal()" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
        </div>
        
        <div class="px-6 py-4">
          <div class="grid grid-cols-2 gap-4 mb-6">
            <div>
              <label class="text-sm font-medium text-gray-700">Nombre</label>
              <p id="modalName" class="text-gray-900 font-semibold">-</p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-700">Email</label>
              <p id="modalEmail" class="text-gray-900 font-semibold">-</p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-700">Asunto</label>
              <p id="modalSubject" class="text-gray-900 font-semibold">-</p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-700">Fecha</label>
              <p id="modalDate" class="text-gray-900 font-semibold">-</p>
            </div>
          </div>

          <div class="mb-6">
            <label class="text-sm font-medium text-gray-700">Mensaje</label>
            <p id="modalMessage" class="text-gray-900 p-4 bg-gray-50 rounded-lg mt-2 whitespace-pre-wrap">-</p>
          </div>

          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Estado</label>
            <select id="modalStatus" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
              <option value="new">Nuevo</option>
              <option value="read">Leído</option>
              <option value="resolved">Resuelto</option>
              <option value="spam">Spam</option>
            </select>
          </div>

          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Notas de Administrador</label>
            <textarea id="modalNotes" placeholder="Añade notas sobre este mensaje..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" rows="4"></textarea>
          </div>

          <div class="flex gap-4">
            <button onclick="saveMessage()" class="flex-1 px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">
              Guardar Cambios
            </button>
            <button onclick="closeModal()" class="flex-1 px-4 py-2 bg-gray-300 text-gray-900 font-semibold rounded-lg hover:bg-gray-400 transition">
              Cerrar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    let currentMessages = [];
    let currentMessageId = null;

    // Cargar mensajes
    async function loadMessages() {
      try {
        const response = await fetch('/api/admin/messages');
        const result = await response.json();

        if (result.success) {
          currentMessages = result.data || [];
          renderMessages();
        } else {
          console.error('Error loading messages:', result.error);
          showError('Error al cargar los mensajes');
        }
      } catch (error) {
        console.error('Error fetching messages:', error);
        showError('Error al cargar los mensajes');
      }
    }

    // Renderizar tabla
    function renderMessages() {
      const tbody = document.getElementById('messagesTableBody');
      const status = document.getElementById('filterStatus').value;
      const search = document.getElementById('searchInput').value.toLowerCase();
      const sort = document.getElementById('sortBy').value;

      let filtered = currentMessages;

      // Filtrar por estado
      if (status) {
        filtered = filtered.filter(msg => msg.status === status);
      }

      // Filtrar por búsqueda
      if (search) {
        filtered = filtered.filter(msg =>
          msg.name.toLowerCase().includes(search) ||
          msg.email.toLowerCase().includes(search) ||
          msg.subject.toLowerCase().includes(search)
        );
      }

      // Ordenar
      if (sort === 'oldest') {
        filtered.sort((a, b) => new Date(a.created_at) - new Date(b.created_at));
      } else {
        filtered.sort((a, b) => new Date(b.created_at) - new Date(a.created_at));
      }

      if (filtered.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" class="px-6 py-12 text-center text-gray-500">No hay mensajes</td></tr>';
        return;
      }

      tbody.innerHTML = filtered.map(msg => `
        <tr class="hover:bg-gray-50 cursor-pointer" onclick="openMessage('${msg.id}')">
          <td class="px-6 py-4 text-sm text-gray-900">${msg.name}</td>
          <td class="px-6 py-4 text-sm text-gray-600">${msg.email}</td>
          <td class="px-6 py-4 text-sm text-gray-900 truncate">${msg.subject}</td>
          <td class="px-6 py-4 text-sm">
            <span class="px-3 py-1 rounded-full text-white text-xs font-semibold ${getStatusColor(msg.status)}">
              ${getStatusLabel(msg.status)}
            </span>
          </td>
          <td class="px-6 py-4 text-sm text-gray-600">${new Date(msg.created_at).toLocaleDateString('es-ES')}</td>
          <td class="px-6 py-4 text-sm">
            <button onclick="deleteMessage('${msg.id}', event)" class="text-red-600 hover:text-red-900">Eliminar</button>
          </td>
        </tr>
      `).join('');
    }

    function getStatusColor(status) {
      const colors = {
        'new': 'bg-blue-600',
        'read': 'bg-yellow-600',
        'resolved': 'bg-green-600',
        'spam': 'bg-red-600'
      };
      return colors[status] || 'bg-gray-600';
    }

    function getStatusLabel(status) {
      const labels = {
        'new': 'Nuevo',
        'read': 'Leído',
        'resolved': 'Resuelto',
        'spam': 'Spam'
      };
      return labels[status] || status;
    }

    // Abrir modal con detalles
    function openMessage(messageId) {
      const message = currentMessages.find(m => m.id === messageId);
      if (!message) return;

      currentMessageId = messageId;
      document.getElementById('modalName').textContent = message.name;
      document.getElementById('modalEmail').textContent = message.email;
      document.getElementById('modalSubject').textContent = message.subject;
      document.getElementById('modalMessage').textContent = message.message;
      document.getElementById('modalDate').textContent = new Date(message.created_at).toLocaleDateString('es-ES');
      document.getElementById('modalStatus').value = message.status;
      document.getElementById('modalNotes').value = message.admin_notes || '';
      document.getElementById('messageModal').classList.remove('hidden');
    }

    function closeModal() {
      document.getElementById('messageModal').classList.add('hidden');
      currentMessageId = null;
    }

    async function saveMessage() {
      if (!currentMessageId) return;

      try {
        const response = await fetch(`/api/admin/messages/${currentMessageId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            status: document.getElementById('modalStatus').value,
            admin_notes: document.getElementById('modalNotes').value,
          }),
        });

        const result = await response.json();
        if (result.success) {
          closeModal();
          loadMessages();
          showSuccess('Mensaje actualizado correctamente');
        } else {
          showError('Error al actualizar el mensaje');
        }
      } catch (error) {
        console.error('Error saving message:', error);
        showError('Error al guardar los cambios');
      }
    }

    async function deleteMessage(messageId, event) {
      event.stopPropagation();
      if (!confirm('¿Estás seguro de que deseas eliminar este mensaje?')) return;

      try {
        const response = await fetch(`/api/admin/messages/${messageId}`, {
          method: 'DELETE',
        });

        const result = await response.json();
        if (result.success) {
          loadMessages();
          showSuccess('Mensaje eliminado correctamente');
        } else {
          showError('Error al eliminar el mensaje');
        }
      } catch (error) {
        console.error('Error deleting message:', error);
        showError('Error al eliminar el mensaje');
      }
    }

    function showSuccess(message) {
      alert(message); // TODO: Implementar toast notifications
    }

    function showError(message) {
      alert(message); // TODO: Implementar toast notifications
    }

    // Event listeners
    document.getElementById('refreshBtn').addEventListener('click', loadMessages);
    document.getElementById('filterStatus').addEventListener('change', renderMessages);
    document.getElementById('searchInput').addEventListener('input', renderMessages);
    document.getElementById('sortBy').addEventListener('change', renderMessages);

    // Cargar mensajes al iniciar
    loadMessages();
  </script>
</AdminLayout>
