const { data: productsWithoutImages } = await supabaseClient
  .from('products')
  .select('id, name, slug, images')
  .filter('images', 'is', null)
  .order('created_at', { ascending: false });

const { data: allProducts } = await supabaseClient
  .from('products')
  .select('id, name, slug, images')
  .order('created_at', { ascending: false });

const productsWithImages = allProducts?.filter(p => p.images && p.images.length > 0) || [];
const productsWithoutImagesCount = productsWithoutImages?.length || 0;
const productsWithImagesCount = productsWithImages.length || 0;
