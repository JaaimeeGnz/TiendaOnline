---
/**
 * src/pages/admin/productos/index.astro
 * Listado de productos para admin (SSR)
 */

import AdminLayout from '../../../layouts/AdminLayout.astro';
import { supabaseClient } from '../../../lib/supabase';
import { formatPrice } from '../../../lib/utils';

// Obtener todos los productos
const { data: products } = await supabaseClient
  .from('products')
  .select('*, categories(name)')
  .order('created_at', { ascending: false });
---

<AdminLayout title="Gestión de Productos">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-primary-800">Productos</h1>
      <p class="text-neutral-gray_dark mt-1">Gestiona tu inventario</p>
    </div>
    <a
      href="/admin/productos/nuevo"
      class="px-6 py-3 bg-green-600 text-neutral-white font-semibold rounded-sm hover:bg-green-700 transition"
    >
      + Nuevo Producto
    </a>
  </div>

  {products && products.length > 0 ? (
    <div class="bg-white border border-primary-200 rounded-lg overflow-hidden">
      <table class="w-full">
        <thead class="bg-primary-50 border-b border-primary-200">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-primary-800 uppercase">
              Producto
            </th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-primary-800 uppercase">
              Categoría
            </th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-primary-800 uppercase">
              Precio
            </th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-primary-800 uppercase">
              Stock
            </th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-primary-800 uppercase">
              Estado
            </th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-primary-800 uppercase">
              Acciones
            </th>
          </tr>
        </thead>
        <tbody>
          {products.map((product, index) => (
            <tr
              class={index % 2 === 0 ? 'bg-neutral-white' : 'bg-neutral-gray_light'}
            >
              <td class="px-6 py-4 text-sm">
                <div class="flex items-center gap-3">
                  {product.images && product.images[0] ? (
                    <img
                      src={product.images[0]}
                      alt={product.name}
                      class="w-10 h-10 rounded object-cover"
                    />
                  ) : (
                    <div class="w-10 h-10 bg-neutral-gray_medium rounded" />
                  )}
                  <div>
                    <p class="font-semibold text-primary-800">{product.name}</p>
                    <p class="text-xs text-neutral-gray_dark">{product.slug}</p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-neutral-gray_dark">
                {product.categories?.name || 'Sin categoría'}
              </td>
              <td class="px-6 py-4 text-sm font-semibold text-primary-800">
                {formatPrice(product.price_cents)}
              </td>
              <td class="px-6 py-4 text-sm">
                <span
                  class={`px-2 py-1 rounded text-xs font-bold ${
                    product.stock === 0
                      ? 'bg-red-100 text-red-700'
                      : product.stock <= 5
                        ? 'bg-amber-100 text-amber-700'
                        : 'bg-green-100 text-green-700'
                  }`}
                >
                  {product.stock}
                </span>
              </td>
              <td class="px-6 py-4 text-sm">
                <span
                  class={`px-2 py-1 rounded text-xs font-bold ${
                    product.is_active
                      ? 'bg-green-100 text-green-700'
                      : 'bg-gray-100 text-gray-700'
                  }`}
                >
                  {product.is_active ? 'Activo' : 'Inactivo'}
                </span>
              </td>
              <td class="px-6 py-4 text-sm">
                <div class="flex gap-2">
                  <a
                    href={`/admin/productos/${product.id}`}
                    class="text-primary-600 hover:text-primary-800 font-semibold text-xs"
                  >
                    Editar
                  </a>
                  <button
                    class="text-red-600 hover:text-red-800 font-semibold text-xs"
                  >
                    Eliminar
                  </button>
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  ) : (
    <div class="text-center py-12 bg-neutral-gray_light rounded-lg">
      <p class="text-neutral-gray_dark mb-4">No hay productos aún</p>
      <a
        href="/admin/productos/nuevo"
        class="inline-flex px-6 py-2 bg-primary-800 text-neutral-white font-semibold rounded hover:bg-primary-900 transition"
      >
        Crear Primer Producto
      </a>
    </div>
  )}
</AdminLayout>
