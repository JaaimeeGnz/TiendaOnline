---
import AdminLayout from '../../layouts/AdminLayout.astro';
import DashboardAnalytics from '../../components/islands/DashboardAnalytics';
---

<AdminLayout title="Panel Administrador">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-black text-jd-black">Panel de Administración</h1>
        <p class="text-gray-600 mt-2">Gestiona tu tienda desde aquí</p>
      </div>
      <button onclick="logout()" class="flex items-center gap-2 px-6 py-3 bg-jd-red text-white font-bold rounded-lg hover:bg-red-700 active:scale-95 transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        Cerrar Sesión
      </button>
    </div>

    <!-- Analytics Dashboard -->
    <DashboardAnalytics client:load />

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Total Products -->
      <div class="bg-white border-2 border-gray-200 rounded-lg p-6 hover:shadow-lg hover:border-jd-turquoise transition duration-200">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-bold text-gray-600 uppercase">Total de Productos</p>
            <p class="text-3xl font-black text-jd-black mt-3">40</p>
            <p class="text-xs text-gray-500 mt-2">Activos en la tienda</p>
          </div>
          <div class="w-12 h-12 bg-jd-turquoise bg-opacity-10 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-jd-turquoise" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m0 0l8 4m-8-4v10l8 4m0-10l8 4m-8-4v10"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Categories -->
      <div class="bg-white border-2 border-gray-200 rounded-lg p-6 hover:shadow-lg hover:border-jd-turquoise transition duration-200">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-bold text-gray-600 uppercase">Categorías</p>
            <p class="text-3xl font-black text-jd-black mt-3">13</p>
            <p class="text-xs text-gray-500 mt-2">Disponibles</p>
          </div>
          <div class="w-12 h-12 bg-jd-turquoise bg-opacity-10 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-jd-turquoise" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Low Stock -->
      <div class="bg-white border-2 border-gray-200 rounded-lg p-6 hover:shadow-lg hover:border-jd-red transition duration-200">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-bold text-gray-600 uppercase">Stock Bajo</p>
            <p class="text-3xl font-black text-jd-black mt-3">5</p>
            <p class="text-xs text-gray-500 mt-2">Requieren atención</p>
          </div>
          <div class="w-12 h-12 bg-jd-red bg-opacity-10 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-jd-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 4v2M6.343 3h11.314a2 2 0 011.972 2.372l-1.36 6.144A2 2 0 0116.338 13H7.662a2 2 0 01-1.968-1.484L3.371 5.372A2 2 0 015.343 3z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Out of Stock -->
      <div class="bg-white border-2 border-gray-200 rounded-lg p-6 hover:shadow-lg hover:border-jd-red transition duration-200">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-bold text-gray-600 uppercase">Sin Stock</p>
            <p class="text-3xl font-black text-jd-black mt-3">2</p>
            <p class="text-xs text-gray-500 mt-2">Agotados</p>
          </div>
          <div class="w-12 h-12 bg-jd-red bg-opacity-10 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-jd-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <a href="/admin/productos/nuevo" class="bg-jd-red hover:bg-red-700 active:scale-95 text-white px-8 py-4 rounded-lg transition font-bold text-center flex items-center justify-center gap-3 group shadow-sm">
        <svg class="w-6 h-6 group-hover:rotate-90 transition duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Crear Nuevo Producto
      </a>
      <a href="/admin/productos" class="bg-jd-black hover:bg-jd-darkGray active:scale-95 text-white px-8 py-4 rounded-lg transition font-bold text-center flex items-center justify-center gap-3 group shadow-sm">
        <svg class="w-6 h-6 group-hover:translate-x-1 transition duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
        </svg>
        Ver Todos los Productos
      </a>
      <a href="/admin/facturas" class="bg-jd-turquoise hover:bg-jd-turquoise/90 active:scale-95 text-white px-8 py-4 rounded-lg transition font-bold text-center flex items-center justify-center gap-3 group shadow-sm">
        <svg class="w-6 h-6 group-hover:translate-x-1 transition duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Gestionar Facturas
      </a>
    </div>
  </div>
</AdminLayout>
