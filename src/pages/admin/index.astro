---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Panel Administrador">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-bold text-gray-900">Panel de Administración</h1>
        <p class="text-gray-600 mt-2">Bienvenido a tu panel de control</p>
      </div>
      <button onclick="logout()" class="flex items-center gap-2 px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        Cerrar Sesión
      </button>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Total Products -->
      <div class="bg-gradient-to-br from-blue-50 to-blue-100 border border-blue-200 rounded-xl p-6 hover:shadow-lg transition">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-blue-600">Total de Productos</p>
            <p class="text-3xl font-bold text-blue-900 mt-2">40</p>
          </div>
          <div class="w-12 h-12 bg-blue-200 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m0 0l8 4m-8-4v10l8 4m0-10l8 4m-8-4v10"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Categories -->
      <div class="bg-gradient-to-br from-purple-50 to-purple-100 border border-purple-200 rounded-xl p-6 hover:shadow-lg transition">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-purple-600">Categorías</p>
            <p class="text-3xl font-bold text-purple-900 mt-2">13</p>
          </div>
          <div class="w-12 h-12 bg-purple-200 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Low Stock -->
      <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 border border-yellow-200 rounded-xl p-6 hover:shadow-lg transition">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-yellow-600">Stock Bajo</p>
            <p class="text-3xl font-bold text-yellow-900 mt-2">5</p>
          </div>
          <div class="w-12 h-12 bg-yellow-200 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 4v2M6.343 3h11.314a2 2 0 011.972 2.372l-1.36 6.144A2 2 0 0116.338 13H7.662a2 2 0 01-1.968-1.484L3.371 5.372A2 2 0 015.343 3z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Out of Stock -->
      <div class="bg-gradient-to-br from-red-50 to-red-100 border border-red-200 rounded-xl p-6 hover:shadow-lg transition">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-red-600">Sin Stock</p>
            <p class="text-3xl font-bold text-red-900 mt-2">2</p>
          </div>
          <div class="w-12 h-12 bg-red-200 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-red-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <a href="/admin/productos/nuevo" class="bg-gradient-to-r from-indigo-600 to-indigo-700 text-white px-8 py-4 rounded-lg hover:shadow-lg transition font-semibold text-center flex items-center justify-center gap-3 group">
        <svg class="w-6 h-6 group-hover:scale-110 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Crear Nuevo Producto
      </a>
      <a href="/admin/productos" class="bg-gradient-to-r from-gray-600 to-gray-700 text-white px-8 py-4 rounded-lg hover:shadow-lg transition font-semibold text-center flex items-center justify-center gap-3 group">
        <svg class="w-6 h-6 group-hover:scale-110 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
        </svg>
        Ver Productos
      </a>
    </div>
  </div>

  <script>
    function logout() {
      if (confirm('¿Estás seguro que deseas cerrar sesión?')) {
        window.location.href = '/auth';
      }
    }
  </script>
</AdminLayout>
