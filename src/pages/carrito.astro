---
/**
 * src/pages/carrito.astro
 * P√°gina del carrito de compras estilo JD Sports
 */

import PublicLayout from "../layouts/PublicLayout.astro";
import StripeCheckout from "../components/islands/StripeCheckout";
---

<PublicLayout title="Tu Carrito - JGMarket">
    <div class="bg-jd-gray min-h-screen">
        <div class="max-w-6xl mx-auto px-4 py-8">
            <!-- Header -->
            <div class="flex items-center justify-between mb-8">
                <h1
                    class="text-2xl md:text-3xl font-black text-jd-black uppercase"
                >
                    Tu Carrito
                </h1>
                <button
                    id="clear-cart-btn"
                    class="text-sm text-jd-red font-bold hover:underline hidden"
                >
                    Vaciar carrito
                </button>
            </div>

            <!-- Cart Content -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Cart Items -->
                <div class="lg:col-span-2">
                    <!-- Empty State -->
                    <div
                        id="cart-empty"
                        class="bg-white rounded p-12 text-center"
                    >
                        <svg
                            class="w-20 h-20 mx-auto text-gray-300 mb-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1"
                                d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
                            ></path>
                        </svg>
                        <h3 class="text-xl font-bold text-jd-black mb-2">
                            Tu carrito est√° vac√≠o
                        </h3>
                        <p class="text-gray-500 mb-6">
                            ¬°A√±ade productos para empezar!
                        </p>
                        <a
                            href="/productos"
                            class="inline-block px-8 py-3 bg-jd-turquoise text-white font-bold uppercase text-sm hover:bg-opacity-90 transition"
                        >
                            Explorar Productos
                        </a>
                    </div>

                    <!-- Cart Items List -->
                    <div id="cart-items-list" class="hidden space-y-4">
                        <!-- Items will be rendered here by JavaScript -->
                    </div>
                </div>

                <!-- Cart Summary -->
                <div class="lg:col-span-1">
                    <div class="bg-white rounded p-6 sticky top-24">
                        <h3
                            class="font-bold text-lg uppercase mb-4 pb-4 border-b border-gray-200"
                        >
                            Resumen
                        </h3>

                        <div class="space-y-3 mb-6">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Subtotal</span>
                                <span id="cart-subtotal" class="font-bold"
                                    >‚Ç¨0.00</span
                                >
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Env√≠o</span>
                                <span
                                    id="cart-shipping"
                                    class="font-bold text-jd-turquoise"
                                    >GRATIS</span
                                >
                            </div>
                        </div>

                        <!-- Secci√≥n de Cup√≥n de Descuento -->
                        <div class="mb-6 pb-6 border-b border-gray-200">
                            <label class="block text-sm font-bold text-gray-700 mb-2">
                                C√≥digo de Descuento
                            </label>
                            <div class="flex gap-2">
                                <input
                                    type="text"
                                    id="discount-code-input"
                                    placeholder="Ingresa tu c√≥digo"
                                    class="flex-1 px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:border-jd-turquoise"
                                />
                                <button
                                    id="apply-discount-btn"
                                    class="px-4 py-2 bg-jd-turquoise text-white text-sm font-bold rounded hover:bg-opacity-90 transition"
                                >
                                    Aplicar
                                </button>
                            </div>
                            <div id="discount-message" class="mt-2 text-sm"></div>
                            <div id="discount-display" class="hidden mt-3 p-3 bg-green-50 border border-green-200 rounded">
                                <p class="text-sm text-green-700">
                                    <span class="font-bold">Descuento aplicado:</span>
                                    <span id="discount-percentage" class="font-bold">0%</span>
                                </p>
                                <p class="text-sm text-green-700 mt-1">
                                    Ahorro: <span id="discount-amount" class="font-bold">‚Ç¨0.00</span>
                                </p>
                                <button
                                    id="remove-discount-btn"
                                    class="text-xs text-red-600 hover:underline mt-2"
                                >
                                    Remover descuento
                                </button>
                            </div>
                        </div>

                        <div class="pt-4 border-t border-gray-200 mb-6">
                            <div class="flex justify-between">
                                <span class="font-bold text-lg">Total</span>
                                <span
                                    id="cart-total"
                                    class="font-bold text-lg text-jd-red"
                                    >‚Ç¨0.00</span
                                >
                            </div>
                            <p class="text-xs text-gray-500 mt-1">
                                IVA incluido
                            </p>
                        </div>

                        <StripeCheckout client:load />

                        <div class="mt-4 text-center">
                            <a
                                href="/productos"
                                class="text-sm text-jd-black font-bold hover:text-jd-red transition"
                            >
                                ‚Üê Continuar comprando
                            </a>
                        </div>

                        <!-- Payment Methods -->
                        <div class="mt-6 pt-6 border-t border-gray-200">
                            <p class="text-xs text-gray-500 uppercase mb-2">
                                M√©todos de pago:
                            </p>
                            <div class="flex items-center gap-2">
                                <div
                                    class="w-10 h-6 bg-gray-100 rounded flex items-center justify-center text-xs font-bold"
                                >
                                    VISA
                                </div>
                                <div
                                    class="w-10 h-6 bg-gray-100 rounded flex items-center justify-center text-xs font-bold"
                                >
                                    MC
                                </div>
                                <div
                                    class="w-10 h-6 bg-blue-100 rounded flex items-center justify-center text-xs font-bold text-blue-600"
                                >
                                    PP
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Cart functionality
        const CART_KEY = "fashionmarket_cart";
        const DISCOUNT_KEY = "fashionmarket_discount";

        interface CartItem {
            id: string;
            name: string;
            price_cents: number;
            image_url?: string;
            quantity: number;
            size?: string;
            slug?: string;
            stock?: number;
        }

        interface AppliedDiscount {
            code: string;
            percentage: number;
        }

        function getCart(): CartItem[] {
            const stored = localStorage.getItem(CART_KEY);
            console.log("üìñ Leyendo carrito de localStorage:", { CART_KEY, stored });
            
            if (!stored) return [];
            
            try {
              const parsed = JSON.parse(stored);
              // Compatibilidad: si tiene estructura { items: [] }, extrae items
              if (parsed.items && Array.isArray(parsed.items)) {
                console.log("üì¶ Carrito con estructura { items: [] }:", parsed.items);
                return parsed.items;
              }
              // Si es un array directo
              if (Array.isArray(parsed)) {
                console.log("üì¶ Carrito como array directo:", parsed);
                return parsed;
              }
              console.warn("‚ö†Ô∏è Estructura de carrito desconocida:", parsed);
              return [];
            } catch (e) {
              console.error("‚ùå Error parseando carrito:", e);
              return [];
            }
        }

        function getAppliedDiscount(): AppliedDiscount | null {
            const stored = localStorage.getItem(DISCOUNT_KEY);
            if (!stored) return null;
            try {
                return JSON.parse(stored);
            } catch {
                return null;
            }
        }

        function saveDiscount(discount: AppliedDiscount): void {
            localStorage.setItem(DISCOUNT_KEY, JSON.stringify(discount));
        }

        function clearDiscount(): void {
            localStorage.removeItem(DISCOUNT_KEY);
        }

        function saveCart(cart: CartItem[]): void {
            const state = {
              items: cart,
              lastUpdated: Date.now()
            };
            localStorage.setItem(CART_KEY, JSON.stringify(state));
            updateCartUI();
            updateHeaderCartCount();
        }

        function updateHeaderCartCount(): void {
            const cart = getCart();
            const count = cart.reduce((sum, item) => sum + item.quantity, 0);
            const countEl = document.getElementById("cart-count");
            if (countEl) countEl.textContent = count.toString();
        }

        function updateCartUI(): void {
            const cart = getCart();
            const emptyEl = document.getElementById("cart-empty");
            const listEl = document.getElementById("cart-items-list");
            const clearBtn = document.getElementById("clear-cart-btn");
            const checkoutBtn = document.getElementById(
                "checkout-btn",
            ) as HTMLButtonElement;

            if (cart.length === 0) {
                emptyEl?.classList.remove("hidden");
                listEl?.classList.add("hidden");
                clearBtn?.classList.add("hidden");
                if (checkoutBtn) checkoutBtn.disabled = true;
            } else {
                emptyEl?.classList.add("hidden");
                listEl?.classList.remove("hidden");
                clearBtn?.classList.remove("hidden");
                if (checkoutBtn) checkoutBtn.disabled = false;
                renderCartItems(cart);
            }

            updateTotals(cart);
        }

        function renderCartItems(cart: CartItem[]): void {
            const listEl = document.getElementById("cart-items-list");
            if (!listEl) return;

            listEl.innerHTML = cart
                .map(
                    (item, index) => `
        <div class="bg-white rounded p-4 flex gap-4" data-index="${index}">
          <div class="w-24 h-24 bg-jd-gray rounded overflow-hidden flex-shrink-0">
            ${
                item.image_url
                    ? `<img src="${item.image_url}" alt="${item.name}" class="w-full h-full object-cover"/>`
                    : `<div class="w-full h-full flex items-center justify-center text-gray-400">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>`
            }
          </div>
          <div class="flex-1">
            <h4 class="font-bold text-jd-black">${item.name}</h4>
            ${item.size ? `<p class="text-sm text-gray-500">Talla: ${item.size}</p>` : ""}
            <p class="font-bold text-jd-red mt-1">‚Ç¨${(item.price_cents / 100).toFixed(2)}</p>
          </div>
          <div class="flex flex-col items-end justify-between">
            <button class="remove-item text-gray-400 hover:text-jd-red transition" data-index="${index}">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
            <div class="flex items-center gap-2 border border-gray-200 rounded">
              <button class="qty-minus px-3 py-1 text-gray-600 hover:text-jd-black transition" data-index="${index}">‚àí</button>
              <span class="qty-value w-8 text-center font-bold">${item.quantity}</span>
              <button class="qty-plus px-3 py-1 text-gray-600 hover:text-jd-black transition" data-index="${index}">+</button>
            </div>
          </div>
        </div>
      `,
                )
                .join("");

            // Add event listeners
            listEl.querySelectorAll(".remove-item").forEach((btn) => {
                btn.addEventListener("click", (e) => {
                    const index = parseInt(
                        (e.currentTarget as HTMLElement).dataset.index || "0",
                    );
                    removeItem(index);
                });
            });

            listEl.querySelectorAll(".qty-minus").forEach((btn) => {
                btn.addEventListener("click", (e) => {
                    const index = parseInt(
                        (e.currentTarget as HTMLElement).dataset.index || "0",
                    );
                    updateQuantity(index, -1);
                });
            });

            listEl.querySelectorAll(".qty-plus").forEach((btn) => {
                btn.addEventListener("click", (e) => {
                    const index = parseInt(
                        (e.currentTarget as HTMLElement).dataset.index || "0",
                    );
                    updateQuantity(index, 1);
                });
            });
        }

        function removeItem(index: number): void {
            const cart = getCart();
            const item = cart[index];
            
            if (!item) return;

            // Liberar stock antes de eliminar del carrito
            console.log('üîÑ Liberando stock para:', { productId: item.id, quantity: item.quantity });
            
            fetch('/api/cart/release-stock', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    productId: item.id,
                    quantity: item.quantity,
                }),
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    console.log('‚úÖ Stock liberado:', data);
                    // Eliminar del carrito despu√©s de liberar stock
                    cart.splice(index, 1);
                    saveCart(cart);
                } else {
                    console.error('‚ùå Error liberando stock:', data);
                    alert('Error al eliminar del carrito. Intenta de nuevo.');
                }
            })
            .catch(err => {
                console.error('‚ùå Error en release-stock:', err);
                alert('Error al eliminar del carrito. Intenta de nuevo.');
            });
        }

        function updateQuantity(index: number, delta: number): void {
            const cart = getCart();
            if (!cart[index]) return;

            const item = cart[index];
            const oldQuantity = item.quantity;
            const newQuantity = Math.max(1, item.quantity + delta);
            const quantityDelta = newQuantity - oldQuantity;

            // Si disminuye la cantidad, devolver stock
            // Si aumenta, reservar m√°s stock
            const isReduction = quantityDelta < 0;
            const endpoint = isReduction ? '/api/cart/release-stock' : '/api/cart/reserve-stock';
            const absoluteDelta = Math.abs(quantityDelta);

            console.log('üìä Actualizando cantidad:', {
                oldQuantity,
                newQuantity,
                delta: quantityDelta,
                endpoint,
            });

            fetch(endpoint, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    productId: item.id,
                    quantity: absoluteDelta,
                }),
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    console.log('‚úÖ Cantidad actualizada:', data);
                    // Actualizar cantidad en el carrito
                    cart[index].quantity = newQuantity;
                    saveCart(cart);
                } else {
                    console.error('‚ùå Error actualizando cantidad:', data);
                    alert(data.error || 'Error al actualizar cantidad. Intenta de nuevo.');
                }
            })
            .catch(err => {
                console.error('‚ùå Error en updateQuantity:', err);
                alert('Error al actualizar cantidad. Intenta de nuevo.');
            });
        }

        function updateTotals(cart: CartItem[]): void {
            const subtotal = cart.reduce(
                (sum, item) => sum + item.price_cents * item.quantity,
                0,
            );
            // Env√≠o gratis a partir de 50‚Ç¨, si no 10‚Ç¨
            const shipping = subtotal >= 5000 ? 0 : 1000;
            
            // Aplicar descuento si existe
            const discount = getAppliedDiscount();
            let discountAmount = 0;
            if (discount) {
                discountAmount = Math.round(subtotal * (discount.percentage / 100));
            }
            
            const total = subtotal + shipping - discountAmount;
            
            const subtotalEl = document.getElementById("cart-subtotal");
            const shippingEl = document.getElementById("cart-shipping");
            const totalEl = document.getElementById("cart-total");

            if (subtotalEl)
                subtotalEl.textContent = `‚Ç¨${(subtotal / 100).toFixed(2)}`;
            if (shippingEl) {
                shippingEl.textContent = shipping === 0 ? "GRATIS" : `‚Ç¨${(shipping / 100).toFixed(2)}`;
                shippingEl.className = shipping === 0 ? "font-bold text-jd-turquoise" : "font-bold";
            }
            if (totalEl)
                totalEl.textContent = `‚Ç¨${(total / 100).toFixed(2)}`;
        }

        function clearCart(): void {
            localStorage.removeItem(CART_KEY);
            updateCartUI();
            updateHeaderCartCount();
        }

        // Initialize
        document.addEventListener("DOMContentLoaded", () => {
            updateCartUI();
            updateHeaderCartCount();

            const clearBtn = document.getElementById("clear-cart-btn");
            clearBtn?.addEventListener("click", () => {
                if (
                    confirm("¬øEst√°s seguro de que quieres vaciar el carrito?")
                ) {
                    clearCart();
                }
            });

            // Setup discount code handlers
            setupDiscountHandlers();

            // Escuchar cambios del carrito desde AddToCartButton
            window.addEventListener("cart-updated", () => {
                console.log("üõí Carrito actualizado desde AddToCartButton");
                updateCartUI();
                updateHeaderCartCount();
            });
        });

        function setupDiscountHandlers(): void {
            const applyBtn = document.getElementById("apply-discount-btn");
            const removeBtn = document.getElementById("remove-discount-btn");
            const codeInput = document.getElementById("discount-code-input") as HTMLInputElement;

            // Load and display existing discount if any
            const existingDiscount = getAppliedDiscount();
            if (existingDiscount) {
                displayAppliedDiscount(existingDiscount);
            }

            applyBtn?.addEventListener("click", async () => {
                const code = codeInput?.value.trim() || "";
                if (!code) {
                    showDiscountMessage("Por favor ingresa un c√≥digo", "error");
                    return;
                }

                try {
                    const response = await fetch("/api/discount/validate-code", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({ code }),
                    });

                    const data = await response.json();

                    if (response.ok && data.discountPercentage) {
                        const discount: AppliedDiscount = {
                            code: data.code,
                            percentage: data.discountPercentage,
                        };
                        saveDiscount(discount);
                        displayAppliedDiscount(discount);
                        showDiscountMessage("¬°C√≥digo aplicado correctamente!", "success");
                        codeInput!.value = "";
                        updateCartUI(); // Recalculate totals
                    } else {
                        showDiscountMessage(data.error || "C√≥digo inv√°lido", "error");
                    }
                } catch (error) {
                    showDiscountMessage("Error al validar el c√≥digo", "error");
                    console.error("Discount validation error:", error);
                }
            });

            removeBtn?.addEventListener("click", () => {
                clearDiscount();
                hideDiscountDisplay();
                showDiscountMessage("Descuento removido", "success");
                updateCartUI(); // Recalculate totals
            });

            // Allow Enter key to apply discount
            codeInput?.addEventListener("keypress", (e) => {
                if (e.key === "Enter") {
                    applyBtn?.click();
                }
            });
        }

        function displayAppliedDiscount(discount: AppliedDiscount): void {
            const displayEl = document.getElementById("discount-display");
            const percentageEl = document.getElementById("discount-percentage");
            const amountEl = document.getElementById("discount-amount");

            if (displayEl && percentageEl && amountEl) {
                const cart = getCart();
                const subtotal = cart.reduce(
                    (sum, item) => sum + item.price_cents * item.quantity,
                    0,
                );
                const discountAmount = Math.round(subtotal * (discount.percentage / 100));

                percentageEl.textContent = `${discount.percentage}%`;
                amountEl.textContent = `‚Ç¨${(discountAmount / 100).toFixed(2)}`;
                displayEl.classList.remove("hidden");
            }
        }

        function hideDiscountDisplay(): void {
            const displayEl = document.getElementById("discount-display");
            displayEl?.classList.add("hidden");
        }

        function showDiscountMessage(message: string, type: "success" | "error"): void {
            const messageEl = document.getElementById("discount-message");
            if (messageEl) {
                messageEl.textContent = message;
                messageEl.className = `mt-2 text-sm ${
                    type === "success"
                        ? "text-green-600 font-bold"
                        : "text-red-600 font-bold"
                }`;
                // Clear message after 3 seconds
                setTimeout(() => {
                    if (messageEl) {
                        messageEl.textContent = "";
                        messageEl.className = "mt-2 text-sm";
                    }
                }, 3000);
            }
        }
    </script>
</PublicLayout>
