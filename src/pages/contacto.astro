---
/**
 * src/pages/contacto.astro
 * Página de contacto
 */

import PublicLayout from "../layouts/PublicLayout.astro";
---

<PublicLayout title="Contacto - FashionMarket">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Header -->
        <div class="text-center mb-16">
            <h1 class="font-serif text-4xl font-bold text-primary-800 mb-4">
                Contáctanos
            </h1>
            <p class="text-lg text-neutral-gray_dark max-w-2xl mx-auto">
                Estamos aquí para ayudarte. Envíanos tus consultas y te
                responderemos a la brevedad.
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Contact Form -->
            <div>
                <h2 class="font-serif text-2xl font-bold text-primary-800 mb-6">
                    Envíanos un mensaje
                </h2>

                <form class="space-y-6">
                    <!-- Nombre -->
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-semibold text-neutral-gray_dark mb-2"
                        >
                            Nombre completo
                        </label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full px-4 py-3 border border-primary-200 rounded-sm focus:ring-2 focus:ring-primary-800 focus:border-transparent transition"
                            placeholder="Juan Pérez"
                        />
                    </div>

                    <!-- Email -->
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-semibold text-neutral-gray_dark mb-2"
                        >
                            Email
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-3 border border-primary-200 rounded-sm focus:ring-2 focus:ring-primary-800 focus:border-transparent transition"
                            placeholder="tu@email.com"
                        />
                    </div>

                    <!-- Asunto -->
                    <div>
                        <label
                            for="subject"
                            class="block text-sm font-semibold text-neutral-gray_dark mb-2"
                        >
                            Asunto
                        </label>
                        <input
                            type="text"
                            id="subject"
                            name="subject"
                            required
                            class="w-full px-4 py-3 border border-primary-200 rounded-sm focus:ring-2 focus:ring-primary-800 focus:border-transparent transition"
                            placeholder="¿En qué podemos ayudarte?"
                        />
                    </div>

                    <!-- Mensaje -->
                    <div>
                        <label
                            for="message"
                            class="block text-sm font-semibold text-neutral-gray_dark mb-2"
                        >
                            Mensaje
                        </label>
                        <textarea
                            id="message"
                            name="message"
                            required
                            rows="6"
                            class="w-full px-4 py-3 border border-primary-200 rounded-sm focus:ring-2 focus:ring-primary-800 focus:border-transparent transition resize-none"
                            placeholder="Escribe tu mensaje aquí..."></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button
                        type="submit"
                        class="w-full px-8 py-4 bg-primary-800 text-neutral-white font-serif font-bold text-lg rounded-sm hover:bg-primary-900 transition transform hover:scale-105"
                    >
                        Enviar Mensaje
                    </button>
                </form>
            </div>

            <!-- Contact Information -->
            <div class="bg-primary-50 rounded-sm p-8">
                <h2 class="font-serif text-2xl font-bold text-primary-800 mb-6">
                    Información de Contacto
                </h2>

                <div class="space-y-6">
                    <!-- Email -->
                    <div class="flex items-start gap-4">
                        <div
                            class="flex-shrink-0 w-12 h-12 bg-primary-800 rounded-sm flex items-center justify-center"
                        >
                            <svg
                                class="w-6 h-6 text-neutral-white"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-primary-800 mb-1">
                                Email
                            </h3>
                            <p class="text-neutral-gray_dark">
                                contacto@fashionmarket.com
                            </p>
                            <p class="text-neutral-gray_dark">
                                ventas@fashionmarket.com
                            </p>
                        </div>
                    </div>

                    <!-- Teléfono -->
                    <div class="flex items-start gap-4">
                        <div
                            class="flex-shrink-0 w-12 h-12 bg-primary-800 rounded-sm flex items-center justify-center"
                        >
                            <svg
                                class="w-6 h-6 text-neutral-white"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-primary-800 mb-1">
                                Teléfono
                            </h3>
                            <p class="text-neutral-gray_dark">
                                +34 900 123 456
                            </p>
                            <p class="text-sm text-neutral-gray_dark">
                                Lun - Vie: 9:00 - 18:00
                            </p>
                        </div>
                    </div>

                    <!-- Dirección -->
                    <div class="flex items-start gap-4">
                        <div
                            class="flex-shrink-0 w-12 h-12 bg-primary-800 rounded-sm flex items-center justify-center"
                        >
                            <svg
                                class="w-6 h-6 text-neutral-white"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-primary-800 mb-1">
                                Tienda Física
                            </h3>
                            <p class="text-neutral-gray_dark">
                                Paseo de Gracia 123
                            </p>
                            <p class="text-neutral-gray_dark">
                                08008 Barcelona, España
                            </p>
                        </div>
                    </div>

                    <!-- Horarios -->
                    <div class="mt-8 pt-6 border-t border-primary-200">
                        <h3 class="font-semibold text-primary-800 mb-3">
                            Horario de Atención
                        </h3>
                        <div class="space-y-2 text-sm text-neutral-gray_dark">
                            <div class="flex justify-between">
                                <span>Lunes - Viernes</span>
                                <span class="font-medium">9:00 - 20:00</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Sábado</span>
                                <span class="font-medium">10:00 - 14:00</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Domingo</span>
                                <span class="font-medium">Cerrado</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Map placeholder -->
        <div class="mt-16">
            <div
                class="bg-neutral-gray_light rounded-sm h-96 flex items-center justify-center"
            >
                <div class="text-center">
                    <svg
                        class="w-16 h-16 mx-auto text-neutral-gray_dark mb-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        ></path>
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <p class="text-neutral-gray_dark font-semibold">
                        Paseo de Gracia 123, Barcelona
                    </p>
                    <p class="text-sm text-neutral-gray_dark mt-2">
                        Mapa interactivo próximamente
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Form handling
        const form = document.querySelector("form");
        if (form) {
            form.addEventListener("submit", (e) => {
                e.preventDefault();

                // TODO: Implementar envío real del formulario
                alert(
                    "Gracias por tu mensaje. Nos pondremos en contacto contigo pronto.",
                );
                form.reset();
            });
        }
    </script>
</PublicLayout>
