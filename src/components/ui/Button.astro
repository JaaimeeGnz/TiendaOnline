---
/**
 * Button.astro
 * Componente de bot√≥n reutilizable
 */

interface Props {
  variant?: 'primary' | 'secondary' | 'danger' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  disabled?: boolean;
  fullWidth?: boolean;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  disabled = false,
  fullWidth = false,
  class: customClass = '',
} = Astro.props;

const baseStyles =
  'font-semibold transition-all duration-200 rounded focus:outline-none focus:ring-2 focus:ring-offset-2';

const variantStyles = {
  primary: 'bg-primary-800 text-neutral-white hover:bg-primary-900 focus:ring-primary-800 disabled:bg-primary-300',
  secondary: 'bg-neutral-gray_light text-neutral-gray_dark hover:bg-neutral-gray_medium focus:ring-neutral-gray_dark disabled:bg-neutral-gray_light',
  danger: 'bg-red-600 text-neutral-white hover:bg-red-700 focus:ring-red-600 disabled:bg-red-400',
  ghost: 'bg-transparent text-primary-800 hover:bg-primary-50 focus:ring-primary-800 disabled:text-primary-300',
};

const sizeStyles = {
  sm: 'px-3 py-1 text-xs',
  md: 'px-4 py-2 text-sm',
  lg: 'px-6 py-3 text-base',
};

const widthStyle = fullWidth ? 'w-full' : '';
const disabledStyle = disabled ? 'cursor-not-allowed opacity-50' : 'cursor-pointer';

const finalClass = `${baseStyles} ${variantStyles[variant]} ${sizeStyles[size]} ${widthStyle} ${disabledStyle} ${customClass}`;
---

<button class={finalClass} disabled={disabled}>
  <slot />
</button>
