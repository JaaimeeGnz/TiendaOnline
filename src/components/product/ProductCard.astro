---
/**
 * ProductCard.astro
 * Tarjeta de producto estilo JD Sports
 */

import FavoriteButton from './FavoriteButton';

interface Props {
  product?: any;
  id?: string;
  name?: string;
  slug?: string;
  price?: number;
  originalPrice?: number | null;
  image?: string;
  stock?: number;
  featured?: boolean;
  brand?: string;
  onSale?: boolean;
}

const props = Astro.props;

// Soportar tanto props individuales como producto completo
let productData = props.product;
if (!productData) {
  productData = {
    id: props.id,
    name: props.name,
    slug: props.slug,
    price_cents: props.price,
    original_price_cents: props.originalPrice,
    images: props.image ? [props.image] : [],
    stock: props.stock,
    featured: props.featured,
    brand: props.brand,
  };
}

const {
  id,
  name,
  slug,
  price_cents,
  original_price_cents,
  images,
  stock,
  featured,
  brand,
} = productData;

const image = images?.[0] || props.image;
const price = price_cents || props.price;
const originalPrice = original_price_cents || props.originalPrice;
const onSale = props.onSale || (originalPrice && originalPrice > price);

// Calcular descuento
const hasDiscount = originalPrice && originalPrice > price;
const discountPercent = hasDiscount
  ? Math.round((1 - price / originalPrice) * 100)
  : 0;

// Formatear precios
const formattedPrice = (price / 100).toFixed(2);
const formattedOriginalPrice = originalPrice
  ? (originalPrice / 100).toFixed(2)
  : null;

// Stock status (computed to avoid <= syntax issues in template)
const isOutOfStock = stock === 0 || stock < 0;
const isLowStock = stock > 0 && stock < 6;
---

<article
  class="group bg-white rounded overflow-hidden transition hover:shadow-lg"
>
  <!-- Image Container -->
  <a
    href={`/productos/${slug}`}
    class="block relative aspect-square overflow-hidden bg-jd-gray"
  >
    {
      image ? (
        <img
          src={image}
          alt={name}
          class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-300"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
          <svg
            class="w-16 h-16 text-gray-300"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
        </div>
      )
    }

    <!-- Favorite Button -->
    <FavoriteButton client:load productId={id} productName={name} />

    <!-- Badges -->
    <div class="absolute top-2 left-2 flex flex-col gap-1">
      {
        (hasDiscount || onSale) && (
          <span class="px-2 py-1 bg-jd-red text-white text-xs font-bold uppercase">
            -{discountPercent}%
          </span>
        )
      }
      {
        featured && !hasDiscount && (
          <span class="px-2 py-1 bg-jd-black text-white text-xs font-bold uppercase">
            Nuevo
          </span>
        )
      }
    </div>

    <!-- Quick Add (hover) -->
    <button
      onclick={`window.location.href='/productos/${slug}'`}
      class="view-product-btn absolute bottom-0 left-0 right-0 py-3 bg-jd-turquoise text-white font-bold text-sm uppercase opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center border-0 cursor-pointer"
    >
      Ver Producto
    </button>
  </a>

  <!-- Product Info -->
  <div class="p-3">
    <!-- Brand -->
    {
      brand && (
        <span class="text-xs font-bold text-gray-500 uppercase">{brand}</span>
      )
    }

    <!-- Name -->
    <h3
      class="font-bold text-sm text-jd-black line-clamp-2 mt-1 group-hover:text-jd-red transition"
    >
      <a href={`/productos/${slug}`}>{name}</a>
    </h3>

    <!-- Price -->
    <div class="mt-2 flex items-center gap-2">
      {
        hasDiscount && formattedOriginalPrice && (
          <span class="text-sm text-gray-400 line-through">
            €{formattedOriginalPrice}
          </span>
        )
      }
      <span
        class={`font-bold ${hasDiscount ? "text-jd-red" : "text-jd-black"}`}
      >
        €{formattedPrice}
      </span>
    </div>

    <!-- Stock Status -->
    {
      isOutOfStock && (
        <span class="inline-block mt-2 text-xs text-gray-500 uppercase">
          Agotado
        </span>
      )
    }
    {
      isLowStock && (
        <span class="inline-block mt-2 text-xs text-jd-red uppercase">
          ¡Últimas unidades!
        </span>
      )
    }
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
